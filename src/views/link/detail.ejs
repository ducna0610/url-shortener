<div class="card">
    <div class="card-header">
        <button
            class="btn btn-warning"
            style="padding: 10px 14px; margin-right: 6px; margin-bottom: 8px"
            onclick="window.history.back()"
        >
            <i class="align-middle" data-feather="arrow-left"></i>
        </button>
        <h4 class="card-title">Detail link</h4>

        <div class="card-content">
            <div class="container p-0">
                <div class="row">
                    <div class="col-md-3">
                        <img src="/assets/img/qr/<%= link.short %>.png" alt="" />
                        <br>
                        <a href="/assets/img/qr/<%= link.short %>.png" download>
                            Download QR
                        </a>
                    </div>
                    <div class="col-md-9">
                        Created at:
                        <mark>
                            <%= (new Date(link.createdAt)).toLocaleString() %>
                        </mark>
                        <br>
                        <br>
                        Full url:
                        <mark>
                            <%= link.full %>
                        </mark>
                        <br>
                        <br>
                        Host name:
                        <mark>
                            <%= url.hostname %>
                        </mark>
                        <br>
                        <br>
                        Path:
                        <mark>
                            <%= url.pathname %> 
                        </mark>
                        Query:
                        <mark>
                            <%= url.searchParams %>
                        </mark>
                        <br>
                        <br>
                        Clicks:
                        <mark>
                            <%= link.clicks %>
                        </mark>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>