
<div class="text-center mt-4">
    <h1 class="h2">Form register</h1>
    <p class="lead">
    </p>
</div>

<div class="card">
    <div class="card-body">
        <div class="m-sm-4">
            <form method="post" action="">
                <div class="mb-4">
                    <label class="form-label">Email</label>
                    <input
                        class="form-control form-control-lg"
                        type="email"
                        name="email"
                        placeholder="Enter your email"
                        required
                        value='<%= errors?.email?.value %>'
                    >
                    <div class="text-danger">
                        <% errors?.email?.msg?.forEach(function(err) { %> 
                            <%= err %>
                        <% }); %>
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label">Name</label>
                    <input
                        class="form-control form-control-lg"
                        type="text"
                        name="name"
                        placeholder="Enter your name"
                        required 
                        value='<%= errors?.name?.value %>'
                    >
                    <div class="text-danger">
                        <% errors?.name?.msg?.forEach(function(err) { %> <%= err %>
                        <% }); %>
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label">Password</label>
                    <input
                        class="form-control form-control-lg"
                        type="password"
                        name="password"
                        placeholder="Enter password"
                        required
                    />
                    <div class="text-danger">
                        <% errors?.password?.forEach(function(err) { %> <%= err
                        %> <% }); %>
                    </div>
                </div>
                <div class="mb-4">
                    <input
                        class="form-control form-control-lg"
                        type="password"
                        name="confirm_password"
                        placeholder="Confirm password"
                        required
                    />
                    <div class="text-danger">
                        <% errors?.confirm_password?.msg?.forEach(function(err) { %>
                        <%= err %> <% }); %>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a href="index.html" class="btn btn-lg btn-info">Login</a>
                    <button class="btn btn-lg btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
